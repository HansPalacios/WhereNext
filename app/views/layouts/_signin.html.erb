<div id="sibox">

	<h2>Sign In</h2>

	<div id="close">x</div>

	<%= form_for(:user, :url => new_user_session_path) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>

  <div class="actions" id="signinsubmit">
      <%= f.submit "Log in", :class => "button" %>
  </div>

  <%= link_to "Forgot your password?", new_password_path(:user) %>

<% end %>

</div>