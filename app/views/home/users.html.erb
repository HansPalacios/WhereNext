<div class="row showbar" id="listusers">
	<div class="col-md-12">
	 	<h2>Users</h2>
		<div class="row">
			<table>
				<tr>
					<th>Username</th>
					<th>Email</th>
					<th>Password</th>
					<th>Edit User</th>
					<th>Delete User</th>
				</tr>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.username %></td>
						<td><%= user.email %></td>
						<td><%= user.password %></td>
						<td><%= link_to 'Edit', edit_user_registration_path %></td>
						<td><%= link_to 'Delete', user_registration_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</table>
		</div>
		<div class="row linkrow">
      <div class="col-md-12">
        <%= link_to "Back", root_path, :class => "adminlinks" %>
      </div>
    </div>
	</div>
</div>