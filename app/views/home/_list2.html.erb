<div class="list2">
	<p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
	<% @bars.each do |bar| %>
		<div class="row eachbar">
			<div class="row">
				 <style media="screen">
				  .bar-<%= bar.id %> { background-image: url(<%= bar.image %>); }
				</style>
				<div class="barlist">
					<%= link_to bar do
						tag.article "", :class => " bar bar-#{bar.id}" end %>
				</div>
				<div>
					<p><strong><em><%= bar.name %></em></strong></p>
					<p><%= bar.address %></p>
					<p><%= bar.phone_number %></p>
					<div style="width:<%= 23 * bar.mean_rating %>px" id="stars"></div>
				</div>
			</div>
			<div class="row">
				<div>
					<p><%= bar.description %></p>
				</div>
			</div>
			<div class="row">
				<p><strong>Amenities:</strong></p>
				<%= output_attributes bar %>
			</div>
			<br>
			<div class="row">
				<p><strong>Popular Nights:</strong></p>
				<div id="popnights">
					<%= bar.popular_nights %>
				</div>
			</div>
		</div>
	<% end %>
</div>