<p id="notice"><%= notice %></p>

<h1>Bars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Avg rating</th>
      <th>Rating</th>
      <th>Music</th>
      <th>Sports</th>
      <th>Dancing</th>
      <th>Beer</th>
      <th>Cocktails</th>
      <th>Wine</th>
      <th>Rooftop</th>
      <th>Cheap food</th>
      <th>Food</th>
      <th>Dress code</th>
      <th>Line</th>
      <th>Popular nights</th>
      <th>Karaoke</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bars.each do |bar| %>
      <tr>
        <td><%= bar.name %></td>
        <td><%= bar.address %></td>
        <td><%= bar.phone_number %></td>
        <td><%= bar.avg_rating %></td>
        <td><%= bar.rating_id %></td>
        <td><%= bar.music %></td>
        <td><%= bar.sports %></td>
        <td><%= bar.dancing %></td>
        <td><%= bar.beer %></td>
        <td><%= bar.cocktails %></td>
        <td><%= bar.wine %></td>
        <td><%= bar.rooftop %></td>
        <td><%= bar.cheap_food %></td>
        <td><%= bar.food %></td>
        <td><%= bar.dress_code %></td>
        <td><%= bar.line %></td>
        <td><%= bar.popular_nights %></td>
        <td><%= bar.karaoke %></td>
        <td><%= link_to 'Show', bar %></td>
        <td><%= link_to 'Edit', edit_bar_path(bar) %></td>
        <td><%= link_to 'Destroy', bar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bar', new_bar_path %>
